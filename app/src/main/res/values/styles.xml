<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/purple_background</item>
        <item name="colorControlActivated">@color/purple_background</item>
    </style>

    <style name="FormTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextColor">@color/error_color_for_purple_background</item>
        <item name="errorIconTint">@color/error_color_for_purple_background</item>
        <item name="boxStrokeErrorColor">@color/error_color_for_purple_background</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="RoundedImageCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="RoundImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="OutlinedWhiteButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/spacing_24</item>
        <item name="android:padding">@dimen/spacing_14</item>
        <item name="strokeWidth">@dimen/spacing_2</item>
        <item name="strokeColor">@color/purple_background</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>