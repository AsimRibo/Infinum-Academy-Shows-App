<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main.xml" app:startDestination="@id/loginFragment">

    <fragment android:id="@+id/loginFragment" android:name="hr.asimr.shows_asim.LoginFragment" android:label="LoginFragment">
        <action android:id="@+id/action_loginFragment_to_showsFragment" app:destination="@id/showsFragment"/>
    </fragment>
    <fragment android:id="@+id/showsFragment" android:name="hr.asimr.shows_asim.ShowsFragment" android:label="ShowsFragment">
        <action android:id="@+id/action_showsFragment_to_showDetailsFragment" app:destination="@id/showDetailsFragment"/>
        <action android:id="@+id/action_showsFragment_to_loginFragment" app:destination="@id/loginFragment"/>
        <argument
            android:name="email"
            app:argType="string"/>
    </fragment>
    <fragment android:id="@+id/showDetailsFragment" android:name="hr.asimr.shows_asim.ShowDetailsFragment"
        android:label="ShowDetailsFragment">
        <action android:id="@+id/action_showDetailsFragment_to_showsFragment" app:destination="@id/showsFragment"/>
        <argument
            android:name="email"
            app:argType="string"/>

        <argument
            android:name="show"
            app:argType="hr.asimr.shows_asim.models.Show"/>
    </fragment>
</navigation>